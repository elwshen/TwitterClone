<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepath.apps.mysimpletweets.TweetDetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="elanawshen"
        android:id="@+id/tvUsername"
        android:padding="5dp"
        android:layout_alignTop="@+id/tvName"
        android:layout_toRightOf="@+id/tvName"
        android:layout_toEndOf="@+id/tvName" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivProfileImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/tvName"
        android:padding="5dp"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="body body body"
        android:id="@+id/tvBody"
        android:layout_below="@+id/tvUsername"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName"
        android:padding="5dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReply"
        android:src="@drawable/ic_reply"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@+id/ivProfileImage"
        android:layout_toLeftOf="@+id/btnRetweet"
        android:layout_toStartOf="@+id/btnRetweet" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRetweet"
        android:src="@drawable/ic_retweet"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/btnReply"
        android:layout_alignRight="@+id/tvBody"
        android:layout_alignEnd="@+id/tvBody" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnFavorite"
        android:src="@drawable/ic_favorite"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/btnRetweet"
        android:layout_toRightOf="@+id/tvBody"
        android:layout_toEndOf="@+id/tvBody" />

</RelativeLayout>

